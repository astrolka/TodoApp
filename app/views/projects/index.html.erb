<h1>Задачи</h1><br><br>

<% @projects.each do |project| %>

	<h2><%= project.title %></h2>

	<ul>
	<% project.todos.each do |todo| %>
		<li><%= todo.text %></li>
	<% end %>
	</ul>

<% end %>
<br><br>

<div>
  <button id="show_btn" class="showDiv"><%=image_tag("addTodoIcon.png")%></button>
</div>

<div id="new_todo_div" style="display:none;">

	<h2>Новая задача</h2>
  <%= form_for :project, method: :patch do |f| %>

      <%= f.fields_for :todos_attributes do |todo_form| %>

          <p>
            <%= todo_form.text_field :text, placeholder:"Название задачи..."%>
          </p>

          <p>
            <%= todo_form.collection_select(:project_id, @projects, :id, :title) %>
          </p>
      <% end %>

      <a href="javascript:undefined" class="hideDiv">ОТМЕНА</a>
      <%= link_to "OK", method: :patch%><br>
      <%= f.submit %>
	<% end %>

</div>

